<mvc:View xmlns:f="sap.f" controllerName="test.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:grid="sap.ui.layout.cssgrid"
    >
    <Page title="ITEMS" >
	<!-- 슬라이드 이미지 넣기 -->
    <FlexBox alignItems="Start" justifyContent="Center" >
        <SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" sizeBehavior="Responsive" width="1500px" height="500px" >
			<GenericTile class="mainImage" 
				backgroundImage="../image/str1.jpg"
				frameType="TwoByOne" press="pressOnTileOne" >
			</GenericTile>
			<GenericTile class="mainImage" 
				backgroundImage="../image/str2.jpg"
				frameType="TwoByOne" press="pressOnTileTwo">
			</GenericTile>
            <GenericTile class="mainImage" 
				backgroundImage="../image/cucum1.jpg"
				frameType="TwoByOne" press="pressOnTileTwo">
			</GenericTile>
            <GenericTile class="mainImage" 
				backgroundImage="../image/cucum22.jpg"
				frameType="TwoByOne" press="pressOnTileTwo">
			</GenericTile>
            <GenericTile class="mainImage" 
				backgroundImage="../image/tomato1.jpg"
				frameType="TwoByOne" press="pressOnTileTwo">
			</GenericTile>
            <GenericTile class="mainImage" 
				backgroundImage="../image/tomato2.jpg"
				frameType="TwoByOne" press="pressOnTileTwo">
			</GenericTile>
		</SlideTile>
          </FlexBox>

<!--구간 나눠서 상품 설명 -->
	<VBox justifyContent="End">
			<f:GridList
		id="gridList"
		headerText="DETAILS"
		mode="MultiSelect"
		items="{ path: '/Products' }"
		selectionChange="onSelectionChange"
		delete="onDelete"
		class="sapUiResponsiveContentPadding">
		<f:customLayout>
			<grid:GridBasicLayout gridTemplateColumns="repeat(auto-fit, minmax(8rem, 1fr))" gridGap="1rem" />
		</f:customLayout>

		<f:GridListItem
			detailPress="onDetailPress"
			press="onPress"
			counter="sap-icon://business-card"
			highlight="{Status}"
			type="{type}"
			>
			<f:content>
			<Button icon="sap-icon://cart"/>
			</f:content>
				<f:layoutData >
					<grid:ResponsiveColumnItemLayoutData  columns="4" rows="1" />
				</f:layoutData>
				

			
				<!-- <Image src="{ProductsPicUrl}" width="100%" visible="{= ${onlyImage} ? true : false }" class="imageDisplayBlock" /> -->
				<HBox height="100%" class="sapUiSmallMargin" alignItems="Center" visible="{= ${onlyImage} ? false : true }">
					<Image src="{ProductPicUrl}" width="30rem" class="sapUiSmallMarginEnd" />
					<VBox>
						<Title text="{Name}" wrapping="true" />
						<Label text="{Description}" wrapping="true" />
					</VBox>
				</HBox>
		</f:GridListItem>
		
	</f:GridList>
