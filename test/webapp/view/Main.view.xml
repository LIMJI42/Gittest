				type="{type}"
				>
				<f:layoutData>
					<grid:ResponsiveColumnItemLayoutData  columns="4" rows="1" />
				</f:layoutData>
				<f:content>
					<HBox class="sapUiSmallMargin" alignItems="Center" visible="{= ${onlyImage} ? false : true }">
